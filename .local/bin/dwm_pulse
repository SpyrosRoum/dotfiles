#!/bin/sh

dwm_pulse () {
    muted=$(pulsemixer --get-mute)
    vol="$(pulsemixer --get-volume | grep -o "^[0-9]*")"

    if [ $muted -eq 1 ] || [ "$vol" -eq 0 ]; then
        echo "ðŸ”‡ $vol%"
    elif [ "$vol" -gt 0 ] && [ "$vol" -le 33 ]; then
        echo "ðŸ”ˆ $vol%"
    elif [ "$vol" -gt 33 ] && [ "$vol" -le 66 ]; then
        echo "ðŸ”‰ $vol%"
    else
        echo "ðŸ”Š $vol%"
    fi
}

dwm_pulse

