#!/bin/sh

dwm_alsa () {
    VOL=$(amixer get Master | grep -o "[0-9]*%\|\[on\]\|\[off\]" | head -2)
    NUMB=$(amixer get Master | grep -o "[0-9]*%\|\[on\]\|\[off\]" | head -1 | tr '%' ' ')
    
    if [ -z "${VOL##*'off'*}" ] || [ "$NUMB" -eq 0 ]; then
        echo "ðŸ”‡ $VOL"
    elif [ "$NUMB" -gt 0 ] && [ "$NUMB" -le 33 ]; then
        echo "ðŸ”ˆ $VOL"
    elif [ "$NUMB" -gt 33 ] && [ "$NUMB" -le 66 ]; then
        echo "ðŸ”‰ $VOL"
    else
        echo "ðŸ”Š $VOL"
    fi
}

dwm_alsa
